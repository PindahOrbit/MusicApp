@model MusicApp.Models.Track

@{
    ViewData["Title"] = "Track Details";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary text-center mb-4">@Model.Title</h2>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Title:</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4 fw-bold">Genre:</dt>
                    <dd class="col-sm-8">@Model.Genre</dd>

                    <dt class="col-sm-4 fw-bold">Release Date:</dt>
                    <dd class="col-sm-8">@Model.ReleaseDate?.ToString("MMMM dd, yyyy")</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Uploaded By:</dt>
                    <dd class="col-sm-8">@Model.User?.Id</dd>

                    <dt class="col-sm-4 fw-bold">Uploaded On:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt?.ToString("MMMM dd, yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>

        <div class="text-center mt-4">
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <audio controls class="w-100">
                    <source src="@Url.Content(Model.FilePath)" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            }
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
        </div>
    </div>
</div>
